{
  "asar": true,
  "directories": {
    "app": "app/",
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": [
        "**/*"
      ]
    }
  ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist/assets/icons/splash.bmp",
    "artifactName": "${productName}-portable-${version}.windows.${ext}"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": [
      "AppImage"
    ]
  },
  "afterAllArtifactBuild": "./scripts/afterAllArtifactBuild.js"
}
