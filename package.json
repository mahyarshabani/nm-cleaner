{
  "name": "nm-cleaner",
  "version": "0.0.0",
  "author": "Mahyar Shabani",
  "description": "An application to clean your heavy node_modules",
  "scripts": {
    "ng": "ng",
    "prestart": "npx eslint .",
    "start": "npm-run-all -p electron:serve ng:serve",
    "ng:serve": "ng serve -c web --port 5000",
    "build": "npm run electron:serve-tsc && ng build --base-href ./",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "web:build": "npm run build -- -c web-production",
    "electron": "electron",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:5000 & npm run electron:serve-tsc && electron app/main.js --serve",
    "electron:build": "npm run build:prod && electron-builder build --publish=never --config electron-builder.json",
    "lint": "npx eslint .",
    "test:prod": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "test:dev": "ng test",
    "test": "npm run test:dev"
  },
  "main": "app/main.js",
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.1.0",
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/forms": "^14.1.0",
    "@angular/platform-browser": "^14.1.0",
    "@angular/platform-browser-dynamic": "^14.1.0",
    "@angular/router": "^14.1.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.2",
    "@angular-eslint/builder": "14.4.0",
    "@angular-eslint/eslint-plugin": "14.4.0",
    "@angular-eslint/eslint-plugin-template": "14.4.0",
    "@angular-eslint/schematics": "14.4.0",
    "@angular-eslint/template-parser": "14.4.0",
    "@angular/cli": "~14.1.2",
    "@angular/compiler-cli": "^14.1.0",
    "@types/fs-extra": "^11.0.1",
    "@types/jasmine": "~4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "autoprefixer": "^10.4.13",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-debug": "^3.2.0",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.33.0",
    "jasmine-core": "~4.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.2",
    "typescript": "^4.7.4",
    "wait-on": "^7.0.1"
  }
}
